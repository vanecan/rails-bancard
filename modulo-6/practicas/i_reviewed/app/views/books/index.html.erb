<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="container">
    <div class="books row">
      <%= paginate(@books) %>
      <% @books.each do |book| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <tr>
                <td><%= book.name %></td>
                <td><%= book.author %></td>
                <td><%= link_to 'Show', book %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
            </div>
          </div>
      <% end %>
      <%= paginate(@books) %>
    </div>
  </div>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
